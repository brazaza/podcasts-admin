# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/podcasts_admin

# Payload CMS
PAYLOAD_SECRET=your-super-secret-key-change-in-production

# S3 Storage
S3_BUCKET=your-bucket-name
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_PUBLIC_BASE_URL=https://your-bucket.s3.amazonaws.com

# Preview Mode
PREVIEW_SECRET=your-preview-secret-key
PREVIEW_URL=http://localhost:3000

# Rebuild Webhook (triggered on publish)
REBUILD_WEBHOOK_URL=https://api.vercel.com/v1/integrations/deploy/your-deploy-hook
REBUILD_WEBHOOK_SECRET=your-webhook-secret

# FFprobe (for audio duration extraction)
# Leave empty to use system ffprobe, or specify full path
FFPROBE_PATH=

# Next.js
NEXT_PUBLIC_SITE_URL=http://localhost:3000
